{
  "manifest_version": 3,
  "name": "debunkr Dashboard",
  "version": "2.0",
  "description": "AI-powered misinformation analysis with egalitarian perspective",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open debunkr Dashboard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["chat.html", "chat.css", "chat.js", "storage-manager.js", "openai-client.js", "ui-manager.js"],
      "matches": ["<all_urls>"]
    }
  ]
}